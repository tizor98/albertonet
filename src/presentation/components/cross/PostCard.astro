---
import { getLangFromUrl } from "@/config/i18n/utils";
import { paths } from "@/config/paths";
import type { PostEntry } from "@/content.config";
import FormattedDate from "../ui/FormattedDate.astro";
import { Image } from "astro:assets";
import defaultBlogImage from "@/presentation/assets/blog-placeholder-1.png";

interface Props {
    post: PostEntry;
    showDescription?: boolean;
}

const { post, showDescription = false } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<a href={paths.blogPost(lang, post.data.slug)} class="w-[575px] flex flex-col items-start justify-start gap-2 shadow-2xl dark:shadow-none rounded-xl">
    <div class="w-full">
        <Image loading="eager" transition:animate={"fade"} id={post.data.title} width={575} height={275} fit="cover" class="block m-auto rounded-t-xl" src={post.data.heroImage ?? defaultBlogImage} alt={post.data.title} />
    </div>
    <h4 class:list={["title font-bold adaptive-text px-4 line-clamp-2 h-12", showDescription ? "" : "flex-1"]}>{post.data.title}</h4>
    <p class="text-gray-700 dark:text-gray-200 px-4 text-sm">
        <FormattedDate date={post.data.pubDate} />
    </p>
    {showDescription && <p class="adaptive-text prose prose-sm text-xs px-4 line-clamp-2 flex-1">{post.data.description}</p>}
    <div class="m-0 text-xs tracking-tight flex flex-wrap gap-1 px-4 pb-4">
        {post.data.categories.split(";").map((category) => {
            return (
                <p
                    class="bg-yellow-300 dark:bg-yellow-800 text-center text-black dark:text-white px-2 py-1 rounded-lg"
                >
                    {category}
                </p>
            );
        })}
    </div>
</a>