---
import { Image } from "astro:assets";
import { getLangFromUrl, useTranslations } from "@/config/i18n/utils";
import { GITHUB_URL, LINKEDIN_URL } from "@/consts";
import profileImg from "@/presentation/assets/profile.jpg";
import HeaderLink from "../nav/HeaderLink.astro";
import Github from "../ui/Github.astro";
import LinkedIn from "../ui/LinkedIn.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang, "home");
---

<section
    id="hero"
    class="container flex flex-col lg:flex-row items-center lg:items-center p-5 gap-8 md:p-10"
>
    <div class="flex flex-col justify-center items-start p-2 md:p-5 gap-5 text-base lg:text-lg adaptive-text flex-1">
        <p class="ui-meta tracking-[0.14em] uppercase">
            Building · Writing · Shipping
        </p>
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight">
            {t("hero.title")}
        </h1>
        <div class="grid gap-3 w-full">
            <div class="ui-surface rounded-xl px-4 py-3">
                <span class="icon-[mdi--integrated-circuit] pr-1 text-blue-900 dark:text-blue-200"></span>
                <span set:html={t("hero.point1")} />
            </div>
            <div class="ui-surface rounded-xl px-4 py-3">
                <span class="icon-[mdi--monitor-edit] pr-1"></span>
                <span set:html={t("hero.point2")} />
            </div>
            <div class="ui-surface rounded-xl px-4 py-3">
                <span class="icon-[mdi--chart-areaspline] pr-1 text-green-800 dark:text-green-200"></span>
                <span set:html={t("hero.point3")} />
            </div>
        </div>
        <div class="flex gap-3 self-start">
            <HeaderLink href={LINKEDIN_URL} class="ui-control no-underline hover:no-underline">
                <LinkedIn />
            </HeaderLink>
            <HeaderLink href={GITHUB_URL} class="ui-control no-underline hover:no-underline">
                <Github />
            </HeaderLink>
        </div>
    </div>
    <div class="w-5/6 max-w-[440px] ui-card self-center lg:mt-8">
        <Image
            class="block w-full aspect-square object-cover"
            src={profileImg}
            alt="alberto profile image"
        />
    </div>
</section>
