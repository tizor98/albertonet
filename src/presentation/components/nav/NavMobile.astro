---
import { getLangFromUrl, useTranslations } from "@/config/i18n/utils";
import Link from "../ui/Link.astro";
import LanguageSwitcher from "../cross/LanguageSwitcher.astro";
import { paths } from "@/config/paths";
import ThemeSwitcher from "../cross/ThemeSwitcher.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang, "home");
---

<div class="lg:hidden flex items-center gap-1">
    <button
        class="hidden"
    >
        <div class="btn rounded-2xl bg-white text-black dark:bg-base-100 dark:text-white">
            <span id="open" class="mdi--microsoft-xbox-controller-menu w-5"  />
        </div>
        <span id="close" class="hidden mdi--hamburger-menu adaptive-text" />
    </button>
    <LanguageSwitcher />
    <ThemeSwitcher />
    <div
        id="navbar-default"
        class="hidden absolute z-50 top-0 h-fit border border-zinc-400 rounded-3xl left-0 right-0 mt-20 p-10 flex flex-col items-start justify-start gap-5 text-2xl text-white dark:text-black bg-zinc-900 dark:bg-zinc-100 cursor-default"
    >
        <Link
            class="z-50 hover:text-blue-800 dark:hover:text-blue-400 duration-150"
            href={paths.blog(lang)}
        >
            {t("blogLink")}
        </Link>
        <Link
            class="z-50 hover:text-blue-800 dark:hover:text-blue-400 duration-150"
            href={paths.contact(lang)}
        >
            {t("contactLink")}
        </Link>
    </div>
</div>

<script>

</script>